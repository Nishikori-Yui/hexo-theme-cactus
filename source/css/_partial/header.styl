#header
  margin: 0 auto 2rem
  width: 100%

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 1.5rem
    line-height: 2rem

    antialias()

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    float: left
    margin-right: 20px
    width: $logo-width
    height: $logo-height
    border-radius: 5px
    background-size: $logo-width $logo-height
    background-repeat: no-repeat
    if $logo-grayout
      filter: grayscale(100%)
      -webkit-filter: grayscale(100%)

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 200
    font-style: normal
    font-size: .8rem
    /* nudge whole nav slightly down on desktop to align with title */
    margin-top: .25rem

    ul
      margin: 0
      padding: 0
      list-style-type: none
      line-height: 1.6
      display: flex
      align-items: center
      flex-wrap: wrap
      gap: 15px

      a
        margin-right: 0
        color: $color-accent-1

      a:hover
        underline(5px, $color-accent-1)

      /* language switcher */
      .lang-switch
        margin-left: 0

      .lang-switch a
        font-weight: 500
        opacity: .9
        /* keep same color as nav links */
        color: $color-accent-1

      .lang-switch a:hover
        opacity: 1

      li
        display: inline-flex
        align-items: center
        vertical-align: middle

      li + li
        border-left: 1px dotted $color-accent-1
        padding-left: 15px

      .icon
        display: none

if $logo-grayout
  #header:hover
    #logo
      filter: none
      -webkit-filter: none

@media screen and (max-width: 480px)
  #header #title
    display: table
    margin-right: 5rem
    min-height: $logo-height
    h1
      display: table-cell
      vertical-align: middle

  #header #nav
    ul
      flex-direction: column
      align-items: flex-start
      gap: .4rem
      /* remove horizontal separators & extra padding when stacked */
      li
        border: 0
        padding: 0
      li + li
        border-left: 0
        padding-left: 0
      a:hover
        background: none

      li
        display: none
        border-right: 0

      li.icon
        position: absolute
        top: 77px
        right: 1rem
        display: inline-block
        text-align: center

      /* larger tap target for the language switcher on mobile */
      .lang-switch a
        display: inline-block
        min-width: 48px
        min-height: 48px

    ul.responsive
      padding-left: $logo-width + 20px
      li
        display: block
        padding: 0
      li + li
        border-left: 0
        padding-left: 0

    ul
      a[aria-label="Menu"]
        display: inline-block
        min-width: 48px
        min-height: 48px

    #header #nav ul.responsive li:not(:first-child)
      padding-top: .75rem
      /* no left padding so vertical items align */
      padding-left: 0
      font-size: 1rem
