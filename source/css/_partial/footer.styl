#footer
  position: absolute
  bottom: 0
  margin-bottom: 10px
  width: 100%
  color: $color-meta
  vertical-align: top
  text-align: center
  font-size: 12px

  ul
    margin: 0
    padding: 0
    list-style: none
    line-height: 1.6
    display: flex
    align-items: center
    flex-wrap: wrap
    gap: 15px

  li
    display: inline-flex
    align-items: center
    vertical-align: middle

    a
      margin-right: 0

  li + li
    border-left: 1px dotted $color-border
    padding-left: 15px

  li:last-child
    margin-right: 0

    a
      margin-right: 0
  .lang-switch a
    font-weight: 500
    opacity: .9

  .lang-switch a:hover
    opacity: 1

  a
    color: $color-meta
    text-decoration: underline
    background-image: none

  a:hover
    color: lighten($color-meta, 20%)

  .footer-left
    height: 20px
    vertical-align: middle
    line-height: 20px

@media (min-width: 39rem)
  #footer
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    align-content: center
    margin-bottom: 20px

    .footer-left
      align-self: flex-start
      margin-right: 20px

    .footer-right
      align-self: flex-end

@media screen and (max-width: 480px)
  #footer
    position: static
    margin-top: 2rem
    padding-bottom: calc(10px + env(safe-area-inset-bottom, 0))
    text-align: center

    .footer-left
      margin-bottom: .75rem

  #footer ul
    flex-direction: column
    align-items: center
    justify-content: center
    gap: .6rem
    li
      border: 0
      padding: 0
    li + li
      border-left: 0
      padding-left: 0

    .lang-switch a
      display: inline-block
      min-width: 48px
      min-height: 48px